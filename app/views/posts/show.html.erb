<p id="notice"><%= notice %></p>


<h2><%= @post.title %></h2>


  
  <%= @post.body %>
  <h3>Comments</h3>
  <%= form_for [@post, @post.comments.build] do |form| %>
  	<%= form.text_area :body, rows: 5 %>
  	<p>
  		<%= form.submit %>
		</p>

  <% end %>

	<% @post.comments.each do |comment| %>
		<p>
			<%= comment.body %>
		</p>
	<% end %>




<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
